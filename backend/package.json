{
  "name": "@make-ideas/backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "jest --runInBand",
    "dev": "cross-env NODE_ENV=development ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.build.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "start": "cross-env NODE_ENV=production node ./dist/backend/src/index.js",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prettify": "prettier --log-level warn --cache --write '{src/**/*,*}.{ts,tsx,js,json,yml,scss}' '!**/{node_modules,dist}/**/*'",
    "pmd": "prisma migrate dev",
    "pmt": "dotenv -e ./.env.test prisma migrate deploy",
    "pgc": "prisma generate",
    "sentry-release": "dotenv -- bash -c 'sentry-cli releases new ${SOURCE_VERSION} --finalize --org ideanick-f76e1b5dd --project backend --auth-token ${SENTRY_AUTH_TOKEN}'",
    "sentry-sourcemaps": "dotenv -- bash -c 'sentry-cli releases files ${SOURCE_VERSION} upload-sourcemaps ./dist --org ideanick-f76e1b5dd --project backend'",
    "sentry": "pnpm sentry-release && pnpm sentry-sourcemaps",
    "prepare": "pnpm pgc && ts-patch install -s",
    "build-emails": "rimraf ./src/emails/dist && mkdir ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.830.0",
    "@aws-sdk/s3-request-presigner": "^3.830.0",
    "@make-ideas/shared": "workspace:*",
    "@make-ideas/webapp": "workspace:*",
    "@prisma/client": "^6.8.2",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^9.28.0",
    "@trpc/server": "10.45.2",
    "axios": "^1.9.0",
    "cloudinary": "^2.6.1",
    "cors": "^2.8.5",
    "cron": "^4.3.1",
    "date-fns": "^4.1.0",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "randomstring": "^1.3.1",
    "react-dom": "18.2.0",
    "react-router-dom": "7.6.1",
    "serialize-error": "8.1.0",
    "superjson": "1.13.3",
    "triple-beam": "^1.4.1",
    "winston": "^3.17.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.36"
  },
  "devDependencies": {
    "@sentry/cli": "^2.46.0",
    "@types/cors": "^2.8.18",
    "@types/cron": "^2.4.3",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.17",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/randomstring": "^1.3.0",
    "@types/triple-beam": "^1.3.5",
    "dotenv-cli": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prisma": "^6.8.2"
  }
}
